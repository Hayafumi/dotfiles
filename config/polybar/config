[module/xwindow]
type = internal/xwindow
label = %title:0:40:...%
label-color1 = ${colors.foreground}
label-foreground = ${colors.white}
label-background = ${colors.background}
label-padding = 2

[module/sep]
type = custom/text
content =  
content-background = ${colors.background}
content-foreground = ${colors.background}
padding = 2

[module/bspwm]
type = internal/bspwm
format = <label-state> <label-mode>
index-sort = true
inline-mode = false

enable-click = true
reverse-scroll = false

label-separator = " "

label-focused = %index%
label-focused-underline = ${colors.foreground}
label-focused-padding = 4
label-focused-background = ${colors.yellow}
label-focused-foreground = ${colors.background}

label-occupied = %index%
label-occupied-padding = 4
label-occupied-background = ${colors.lightbrown}
label-occupied-foreground = ${colors.white}

label-empty = %index%
label-empty-padding = 4
label-empty-background = ${colors.lightbrown}
label-empty-foreground = ${colors.white}

label-urgent = 
label-urgent-padding = 4
label-urgent-foreground = ${colors.background}
label-urgent-background = ${colors.foreground}
label-urgent-overline = ${colors.background}
label-urgent-font = 2

[module/time]
type = internal/date
interval = 10
format-margin = 0

time = "%H:%M"
date = "%d %b"

label = %time%
label-foreground = ${colors.white}
label-background = ${colors.lightbrown}
label-padding = 4

[module/network]
type = internal/network
interface = wlan0

interval = 1.0
accumulate-stats = true
unknown-as-up = true

format-connected = <ramp-signal>  <label-connected>
format-disconnected = <label-disconnected>

label-connected = %essid%
label-disconnected = No Connection
label-disconnected-foreground = ${colors.white}
label-connected-foreground = ${colors.white}

ramp-signal-0 = 
ramp-signal-foreground = ${colors.yellow}
ramp-signal-background = ${colors.background}
ramp-signal-padding = 2

[module/wireless-network]
type = internal/network
interface = wlan0

[settings]
screenchange-reload = true

[global/wm]
margin-top = 0
margin-bottom = 0

